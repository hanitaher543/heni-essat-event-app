<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@android:color/white">

    <!-- Titre de la page de connexion -->
    <TextView
        android:id="@+id/loginTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connexion Étudiant"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:importantForAccessibility="yes"
        android:contentDescription="Titre de la page de connexion" />

    <!-- Champ pour saisir le CIN -->
    <EditText
        android:id="@+id/cinEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="CIN"
        android:inputType="text"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:importantForAccessibility="yes"
        android:contentDescription="Champ pour saisir le CIN de l'étudiant" />

    <!-- Champ pour saisir le mot de passe -->
    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mot de passe"
        android:inputType="textPassword"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:importantForAccessibility="yes"
        android:contentDescription="Champ pour saisir le mot de passe de l'étudiant" />

    <!-- Bouton pour se connecter -->
    <Button
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Se connecter"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_blue_dark"
        android:padding="16dp"
        android:importantForAccessibility="yes"
        android:contentDescription="Bouton pour se connecter" />

    <!-- ProgressBar pour afficher le chargement -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="20dp" />

    <!-- Lien pour rediriger vers la page d'inscription -->
    <TextView
        android:id="@+id/registerRedirectText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pas de compte ? Inscrivez-vous"
        android:textColor="#FF6200EE"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:importantForAccessibility="yes"
        android:contentDescription="Lien vers la page d'inscription" />
</LinearLayout>
